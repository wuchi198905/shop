<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shop.pub.mapper.DynamicMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.shop.pub.bean.Dynamic">
        <id column="dynamic_id" property="dynamicId" />
        <result column="member_id" property="memberId" />
        <result column="content" property="content" />
        <result column="reply_id" property="replyId" />
        <result column="creation_time" property="creationTime" />
        <result column="type" property="type" />
        <result column="title" property="title" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        dynamic_id AS dynamicId, member_id AS memberId, content, reply_id AS replyId, creation_time AS creationTime, type, title
    </sql>

</mapper>
